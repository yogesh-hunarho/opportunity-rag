generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Chat {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  prompt    String
  response  Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}
